{
    "manifest_version": 3,
    "name": "qBittorrent Web Integration",
    "version": "1.0.0",
    "description": "Send magnet links and torrent files directly to your qBittorrent instance",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils/constants.js",
                "content/link-detector.js",
                "content/content-script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "qBittorrent Integration",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "send_all_torrents": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "Send all detected torrents on page"
        }
    }
}