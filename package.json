{
  "name": "qbittorrent-extension",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:performance": "jest --testPathPattern=__tests__/performance",
    "test:ci": "jest --coverage --watchAll=false --maxWorkers=2",
    "test:browser:chrome": "jest --testPathPattern=browser --testNamePattern=chrome",
    "test:browser:firefox": "jest --testPathPattern=browser --testNamePattern=firefox",
    "test:browser:edge": "jest --testPathPattern=browser --testNamePattern=edge",
    "test:load": "jest --testPathPattern=load",
    "test:benchmark": "jest --testPathPattern=benchmark",
    "test:health": "jest --testPathPattern=health",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "security:audit": "npm audit",
    "security:check": "npm run lint && npm run security:audit",
    "security:pentest": "jest --testPathPattern=pentest",
    "security:assess": "jest --testPathPattern=security-assessment",
    "security:report": "jest --testPathPattern=security --reporters=default --reporters=jest-html-reporter",
    "build": "npm run security:check && npm run format && npm run test:ci",
    "package": "node scripts/package.js",
    "monitor:performance": "node scripts/monitor-performance.js",
    "precommit": "npm run lint && npm run test:unit",
    "prepush": "npm run security:check && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevLabs-ZA/qbittorrent-extension.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/DevLabs-ZA/qbittorrent-extension/issues"
  },
  "homepage": "https://github.com/DevLabs-ZA/qbittorrent-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.12",
    "typescript": "^5.3.3",
    "ts-jest": "^29.1.1",
    "sinon": "^17.0.1",
    "sinon-chrome": "^3.0.1",
    "fake-indexeddb": "^5.0.2",
    "whatwg-fetch": "^3.6.20",
    "jsdom": "^23.2.0",
    "webextension-polyfill": "^0.10.0"
  }
}
